                ClientCredentialsTokenPropagator tokenHandler = getTokenPropagator(name);
                Flux<HttpRequest<?>> authorizer = Flux.from(clientCredentialsClient
                        .requestToken(getScope(clientConfiguration)))
                        .map(tokenResponse -> {
